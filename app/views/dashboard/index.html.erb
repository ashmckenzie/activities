<h1>Dashboard</h1>

<div id="activities">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @activities_by_date[date] %>
      <ul>
        <% @activities_by_date[date].each do |activity| %>
          <li><%= link_to activity.name, activity %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>

